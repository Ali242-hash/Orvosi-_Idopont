<Window x:Class="Orvosi__Idopont.Administration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administration" Height="750" Width="500">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="10" Width="200" Grid.Row="0" BorderThickness="3" BorderBrush="Firebrick" Margin="10">
            <Label Content="Administration"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   FontWeight="ExtraBold"
                   Foreground="Black"
                   Padding="10"/>
        </Border>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <Border CornerRadius="15" BorderBrush="Black" BorderThickness="2" Margin="0 20 0 10" Width="250" Background="White">
                <TextBox  
                    FontWeight="Bold" 
                    Padding="10" 
                    TextAlignment="Center" 
                    Name="Adminemail" 
                    Text="Email" 
                    BorderThickness="0" 
                    Background="Transparent"
                    GotFocus="RemoveText" 
                    LostFocus="AddText" />
            </Border>

            <Border CornerRadius="15" BorderBrush="Black" BorderThickness="2" Margin="0 20 0 10" Width="250" Background="White">
                <TextBox  
            FontWeight="Bold" 
            Padding="10" 
            TextAlignment="Center" 
            Name="AdminPass" 
            Text="Password" 
            BorderThickness="0" 
            Background="Transparent"
            GotFocus="RemoveText" 
            LostFocus="AddText"/>
            </Border>

           

            <Border CornerRadius="20" BorderBrush="SaddleBrown" BorderThickness="2" Background="SaddleBrown" Margin="20" Width="250" ClipToBounds="True">
                <Button 
                    KeyDown="Admin_Click"
                    IsDefault="True"
                    FontWeight="Bold" 
                    FontSize="15" 
                    BorderThickness="0" 
                    Background="Transparent" 
                    Content="Click" 
                    Click="Enter_admin" 
                    Padding="10"
                    Foreground="Wheat"
                    HorizontalAlignment="Center"/>
            </Border>
            <Button x:Name="Docpage" IsDefault="True" FontSize="10" Content="Doctor Page" BorderThickness="3" BorderBrush="Black" Width="100" Height="50" Background="Beige" FontWeight="Bold" Margin="0,0,0,10" Click= "Doc_Click" />
           
            <Button x:Name="adminpage" FontSize="10" Click="Return_click" Content="Main Page" BorderThickness="3" BorderBrush="Black" Width="100" Height="50" Background="Beige" FontWeight="Bold" Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</Window>
