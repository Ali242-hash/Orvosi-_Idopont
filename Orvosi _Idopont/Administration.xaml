<Window x:Class="Orvosi__Idopont.Administration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orvosi__Idopont"
        mc:Ignorable="d"
        Title="Administration" Height="650" Width="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="10" Width="300" Grid.Row="0" BorderThickness="3" BorderBrush="Firebrick" Margin="10">
            <Label Content="Administration"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   FontWeight="ExtraBold"
                   Foreground="Black"
                   Padding="10"/>
        </Border>

        
        <Image Grid.Row="1"
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Margin="30"
               Stretch="Uniform"
               Source="https://cdn.pixabay.com/photo/2020/04/03/00/22/doctor-4997061_1280.png" />

        <Border  Grid.Row="2" BorderBrush="SaddleBrown" BorderThickness="2"/>

        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border CornerRadius="15" BorderBrush="Black" BorderThickness="2" Margin="0 40 0 10" Width="200" HorizontalAlignment="Center" Background="White">
                <TextBox  
        FontWeight="Bold" 
        Padding="10" 
        TextAlignment="Center" 
        Name="Adminemail" 
        Text="Email" 
        BorderThickness="0" 
        Background="Transparent"
        GotFocus="RemoveText" 
        LostFocus="AddText" />
            </Border>

            <Border CornerRadius="15" BorderBrush="Black" BorderThickness="2" Margin="0 30 0 10" Width="200" HorizontalAlignment="Center" Background="White">
                <TextBox 
        FontWeight="Bold" 
        Padding="10" 
        TextAlignment="Center" 
        Name="AdminPass"  
        Text="Password" 
        BorderThickness="0" 
        Background="Transparent"
        GotFocus="RemoveText" 
        LostFocus="AddText" />
            </Border>

            <Border CornerRadius="20" BorderBrush="SaddleBrown" BorderThickness="2" Background="SaddleBrown" Margin="0 30" Width="200" HorizontalAlignment="Center" ClipToBounds="True">
                <Button 
        FontWeight="Bold" 
        FontSize="15" 
        BorderThickness="0" 
        Background="Transparent" 
        Content="Click" 
        Click="Enter_admin" 
        Padding="10"
        Width="Auto"
        Foreground="Wheat"
        HorizontalAlignment="Center"/>
            </Border>

        </StackPanel>
    </Grid>
</Window>
