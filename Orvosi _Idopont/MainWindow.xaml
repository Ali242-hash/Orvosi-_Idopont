<Window x:Class="Orvosi__Idopont.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medical Appointment" Height="750" Width="850">

    <Grid Background="Bisque">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <Label Grid.Row="0" Content="Orvosi Idopont" HorizontalAlignment="Center"
               FontSize="24" FontWeight="Bold" Foreground="Firebrick"/>

        <Border Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Background="AntiqueWhite" Width="500" HorizontalAlignment="Center">

                  
                    <Label Content="Register" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

                    <Label Content="Full Name" FontSize="12"/>
                    <TextBox x:Name="fullnameInput" Height="22"/>

                    <Label Content="Email" FontSize="12"/>
                    <TextBox x:Name="emailinput" Height="22"/>

                    <Label Content="Username" FontSize="12"/>
                    <TextBox x:Name="userinput" Height="22"/>

                    <Label Content="Password" FontSize="12"/>
                    <PasswordBox x:Name="passwordinput" Height="22"/>

                    <Label Content="Role" FontSize="12"/>
                    <ComboBox x:Name="roleinput" Height="24">
                        <ComboBoxItem Content="Patient"/>
                        <ComboBoxItem Content="Doctor"/>
                        <ComboBoxItem Content="Admin"/>
                    </ComboBox>

                    <Button x:Name="Bookpage" Content="Register" Width="100" Height="30" Click="Book_Click"/>

                    
                    <StackPanel Background="LightBlue">
                        <Label Content="Login" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Label Content="Username or Email"/>
                        <TextBox x:Name="LoginUserInput" Height="22"/>
                        <Label Content="Password"/>
                        <PasswordBox x:Name="LoginPassInput" Height="22"/>
                        <Button x:Name="LoginBtn" Content="Login" Width="80" Height="28" Click="Login_Click"/>
                    </StackPanel>

                   
                    <StackPanel Background="Beige">
                        <Label Content="Book Appointment" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Label Content="Timeslot ID"/>
                        <TextBox x:Name="TimeslotInput" Height="22"/>
                        <Button x:Name="BookAppointmentBtn" Content="Confirm" Width="100" Height="30" Click="BookAppointment_Click"/>
                    </StackPanel>

                  
                    <Button x:Name="cancelconfirm" Content="Cancel Appointment" Width="140" Height="30" Click="Cancel_click" Background="LightCoral"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
